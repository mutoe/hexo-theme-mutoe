
*
::after
::before
  box-sizing inherit

body
  box-sizing border-box
  font-family 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif
  font-size $text-md
  color $text-primary
  line-height unit($sqrt2, 'em')
  overflow-x hidden
  min-width 320px

h1,h2,h3,h4,h5,h6
  line-height 1.5

h1
  font-size 26px
  font-weight 400

a
  display inline-block
  position relative
  margin-left 4px
  margin-right 4px
  vertical-align top
  z-index 0
  transition color .2s
  text-decoration none
  outline none
  color $primary

  &::before
    content ""
    position absolute
    top auto
    bottom 0
    left 0
    display block
    width 100%
    height 1px
    background-color @color
    transform scaleX(0)
    transition all .2s

  &:hover
  &:active
    color darken(@color, 20%)

    &::before
      background-color @color
      transform scaleX(1)

h1, h2
  a::before
    height 2px
